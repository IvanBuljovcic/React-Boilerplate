[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style = space
indent_size = 4

[{*.applejs,*.js}]
indent_style = tab
tab_width = 4

[*.jsx]
indent_style = tab
tab_width = 4

[*.scss, *.css]
indent_style = tab
tab_width = 4

[{.analysis_options,*.yml,*.yaml}]
indent_style = space
indent_size = 4
